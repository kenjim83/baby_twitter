<div class="container">
	<header>
		<%=@user_name %>
	</header>


	<form action="/tweet/new" method="post" accept-charset="utf-8">
  		<textarea maxlength="140" name="tweet" rows="10" cols="30" placeholder="Tweet here...">
  		</textarea>
  		<input type="submit" value="New tweet">
	</form>

	<ul>
		<% @user_tweets.each do |tweet| %>
			<li><%= tweet.content @%></li>
		<% end %>
	</ul>

</div>